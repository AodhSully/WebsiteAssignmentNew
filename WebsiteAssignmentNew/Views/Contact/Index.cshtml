@model WebsiteAssignmentNew.Models.ContactModel
@{
    ViewBag.Title = "Index";
}

<h2 id="pageTitle">Contact BadCat</h2>

        <div class="col-md-4-push-2">
            <img id="contactLogo" src="~/Content/Images/logoSmall.png" />
        </div>
@using (Html.BeginForm("Feedback", "Contact", FormMethod.Post))
{
    @Html.ValidationSummary(false, "", new { @class = "error" })
    <p class="col-md-2-pull-2 col-form-label">
        @Html.LabelFor(c => c.Name)
        </p>
        <p class="col-md-push-2 col-form-label">
        @Html.TextBoxFor(c => c.Name)<span> (Optional)</span>
    </p>

    <p class="col-md-2-pull-2 col-form-label">
        @Html.LabelFor(c => c.Email)
        </p>
        <p class="col-md-2-push-2 col-form-label">
        @Html.TextBoxFor(c => c.Email)<span> (Required)</span>
    </p>


    <p class="col-md-2-pull-2 col-form-label">
        @Html.LabelFor(c => c.Phone)
        </p>
        <p class="col-md-2-push-2 col-form-label">
        @Html.TextBoxFor(c => c.Phone)<span> (Optional)</span>
    </p>

    <p class="col-md-2-pull-2 col-form-label">
        @Html.LabelFor(c => c.Address)
        </p>
        <p class="col-md-2-push-2 col-form-label">
        @Html.TextBoxFor(c => c.Address)<span> (Optional)</span>
    </p>

    <p class="col-md-2-pull-2 col-form-label">
        @Html.LabelFor(c => c.Website)
        </p>
        <p class="col-md-2-push-2 col-form-label">
        @Html.TextBoxFor(c => c.Website)<span> (Optional)</span>
    </p>

    <p class="col-md-2-pull-2 col-form-label">
        @Html.LabelFor(c => c.Artist)
        </p>
        <p class="col-md-2-push-2 col-form-label">
        @Html.CheckBox("Artist", false)<span> (Optional)</span>
    </p>



    <p class="col-md-2-pull-2 col-form-label">
        @Html.LabelFor(c => c.ArtistName)
        </p>
        <p class="col-md-2-push-2 col-form-label">
        @Html.TextBoxFor(c => c.ArtistName)<span> (Optional)</span>
    </p>



        <p class="col-md-2-pull-2 col-form-label">
            @Html.LabelFor(c => c.Comments)
            </p>

            <p class="col-md-2-pull-2 col-form-label">
            @Html.TextAreaFor(c => c.Comments, new { @rows = 4, @cols = 50 })
        </p>
        <input type="submit" value="Submit" />

    //This reset button is visible but not functional
    <input type='button' id='resetButton' value='Reset' onclick='Contact.reset();return false;' />

}




